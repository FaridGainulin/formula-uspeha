.main-section
  background-color #fff

  &__container
    position relative
    z-index 1
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 80px 0
    +above($breakpoints.md)
      padding 40px 0 100px 0
    +above($breakpoints.xxl)
      padding 59px 0 118px 0

  &__title,
  &__sub-title
    text-align: center
    color: $color-blue
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 0 0
    line-height 143%
    +above($breakpoints.sm)
      padding 60px 0 0 0
    +above($breakpoints.md)
      padding 100px 0 0 0
    +above($breakpoints.xxl)
      padding 151px 0 0 0

  &__sub-title-wrapper
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    +above($breakpoints.md)
      gap: 19px

  &__icon-coin
    display: none
    +above($breakpoints.sm)
      display: block
      width 36px
      height: 46px
    +above($breakpoints.md)
      width 49px
      height: 53px

  &__sub-title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 20px  0 25px 0
    +above($breakpoints.md)
      padding 30px  0 30px 0
    +above($breakpoints.xxl)
      padding 33px 0 42px 0

  &__form
    width 100%
    max-width: 300px
    background-color $color-blue
    border-radius: 20px
    padding: 20px
    display: flex
    flex-direction: column
    justify-content center
    gap: 8px
    +above($breakpoints.md)
      border-radius: 30px
      max-width: 440px
      gap: 16px
      padding: 43px 35px

  &__img
    width 300px
    height: auto
    margin: 20px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 456px;
      bottom: 13px;
      right: -10px;
    +above($breakpoints.md)
      width: 655px;
      bottom: 13px;
      right: -103px;
    +above($breakpoints.xxl)
      width 1051px
      bottom: -23px;
      right: -245px;
