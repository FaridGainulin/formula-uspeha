.city-section
  background-color #FDC740

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 40px 0
    +above($breakpoints.md)
      padding 50px 0 70px 0
    +above($breakpoints.xxl)
      padding 62px 0 81px 0

  &__title
    padding 0 0 20px 0
    color: $color-blue
    text-align: center
    line-height 130%
    +above($breakpoints.sm)
      line-height 150%
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 49px 0

  &__bottom
    width 100%
    max-width: 330px
    padding 20px
    border-radius: 20px
    background-color $color-blue
    text-align: center
    color: #fff
    +above($breakpoints.md)
      max-width: 350px
    +above($breakpoints.xxl)
      max-width: 440px
      padding 40px 35px 43px 35px
      border-radius: 30px

  &__bottom-text
    line-height 156% !important

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap 8px
    padding-top 20px
    +above($breakpoints.md)
      padding-top 32px
      gap 16px

  &__img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      position: absolute
      margin 0
      width: 336px;
      right: 0px;
      bottom: 6px;
    +above($breakpoints.md)
      width: 427px;
      right: 0;
      bottom: 8px;
    +above($breakpoints.xxl)
      width: 583px;
      right: -37px;
      bottom: 11px;
