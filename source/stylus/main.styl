@font-face
  font-family: "Ubuntu-Regular"
  src: url('../fonts/Ubuntu-Regular.woff'), url('../fonts/Ubuntu-Regular.woff2')
  font-display: swap
@font-face
  font-family: "Ubuntu-Medium"
  src: url('../fonts/Ubuntu-Medium.woff'), url('../fonts/Ubuntu-Medium.woff2')
  font-display: swap
@font-face
  font-family: "Ubuntu-Bold"
  src: url('../fonts/Ubuntu-Bold.woff'), url('../fonts/Ubuntu-Bold.woff2')
  font-display: swap

@font-face
  font-family: "Montserrat-Bold"
  src: url('../fonts/Montserrat-Bold.woff'), url('../fonts/Montserrat-Bold.woff2')
  font-display: swap

@font-face
  font-family: "DelaGothicOne-Regular"
  src: url('../fonts/DelaGothicOne-Regular.woff'), url('../fonts/DelaGothicOne-Regular.woff2')
  font-display: swap

@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Ubuntu-Regular"
  font-weight: 400
  line-height: 120%
  color $color-black

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.main
  flex: 1

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px





